<section id="list-items">
  <div class="row">
    <form action="#" class="create form-inline text-center" {{action "createListItem" on="submit"}}>
      <div class="form-group">
        {{view "select" content=controller.types value=attributes.mediaType class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=attributes.name placeholder="enter item" id="list-item-name" class="form-control"}}
      </div>
      <input type="submit" class="btn btn-default" value="Add To List">
    </form>
  </div>

  <div class="row">
    <section class="list list-group col-md-8 col-md-offset-2">
      {{#each listItem in controller}}
        <a href="#" class="list-item list-group-item {{listItem.mediaType}} {{listItem.itemName}}"
          data-toggle="collapse" data-target="{{listItem.itemDOMID}}">
          <i class="list-item__icon fa fa-2x fa-fw {{listItem.typeIcon}}"></i>
          <span class="list-item__name">{{listItem.model.name}}</span>
          <button type="button" class="close" aria-label="Close" id="list-item-delete" {{action "deleteListItem"}}>
            <span aria-hidden="true">&times;</span>
          </button>
          <div id="{{listItem.itemName}}" class="collapse">
            {{component listItem.componentName listItem=listItem.model}}
          </div>
        </a>
      {{/each}}
    </section>
  </div>
</section>
